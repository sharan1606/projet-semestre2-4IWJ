{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": "src",  // Indique que la racine de l'importation se trouve dans le dossier src
    "paths": {
      "*": ["node_modules/*", "src/*"]  // Permet de r√©soudre les modules dans src
    }
  },

  "include": ["src/**/*", "@types"], // Prend en compte `@types` dans la compilation
  "exclude": ["node_modules", "**/*.test.ts"]
}

