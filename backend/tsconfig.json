{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"] // Inclut les types personnalis√©s
  },
  "include": ["src/**/*", "@types"], // Prend en compte `@types` dans la compilation
  "exclude": ["node_modules"]
}